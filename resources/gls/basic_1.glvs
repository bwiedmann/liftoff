#version 330

layout(location = 0) in vec3 position;
layout(location = 1) in vec2 uv;
layout(location = 2) in vec3 normal;

out vec2 uv0;
out vec3 normal0;
out vec4 color0;

uniform mat4 mvp;
uniform vec4 color;

void main()
{
    gl_Position = mvp * vec4(position, 1.0);

    uv0 = uv;
    normal0 = normal;
    color0 = color;
}
